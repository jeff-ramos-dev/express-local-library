<h1><%= title %></h1>

<form action="" method="POST">
    <div class="form-group">
        <label for="first_name">First Name:</label>
        <input 
            type="text" 
            id="first_name" 
            name="first_name" 
            class="form-control" 
            placeholder="First name" 
            required="true" 
            <%= locals.author ? author.first_name : "" %>
        />
        <label for="family_name">Family Name:</label>
        <input 
            type="text" 
            id="family_name" 
            class="form-control" 
            placeholder="Family name"
            required="true"
            <%= locals.author ? author.family_name : "" %>
        />
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date of birth:</label>
        <input 
            type="date" 
            id="date_of_birth" 
            name="date_of_birth"
            class="form-control"
            <%= locals.author ? author.date_of_birth : "" %>
        />
    </div>
    <div class="form-group">
        <label for="date_of_death">Date of death:</label>
        <input 
            type="date" 
            id="date_of_death" 
            name="date_of_death"
            class="form-control"
            <% locals.author ? author.date_of_death : "" %>
        />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
    <% if (locals.errors) { %>
        <ul>
            <% for (const error of errors) { %>
                <li><%= error.msg %></li>
            <% } %>
        </ul>
    <% } %>
</form>