<h1>Author: <%= author.name %></h1>
<p><%= author.lifespan %></p>

<div class="book_list">
    <h4>Books</h4>
    <dl>
        <% if (author_books.length > 0) { %>
            <% for (const book of author_books) { %>
                <dt>
                    <a href=<%= book.url %>> <%= book.title %></a>
                </dt>
                <dd><%= book.summary %></dd>
            <% } %>
        <% } else { %>
            <p>This author has no books.</p>
        <% } %>
    </dl>
</div>
<hr>
<p>
    <a href=<%= author.url+'/delete' %>>Delete author</a>
</p>